# HR ERP Login Credentials
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to git!

# Required credentials
HR_USERNAME=your.email@company.com
HR_PASSWORD=your-password-here
HR_URL=https://your-hr-portal.com/login

# Schedule (HH:MM format, 24-hour)
LOGIN_TIME=09:30
LOGOUT_TIME=19:30
RANDOM_DELAY=5

# Notifications (optional but recommended)
GOOGLE_CHAT_WEBHOOK=https://chat.googleapis.com/v1/spaces/...
DISCORD_WEBHOOK=https://discord.com/api/webhooks/...
NOTIFICATIONS_ENABLED=true

# Browser settings
HEADLESS=true
SCREENSHOTS_ENABLED=true

# Timezone
TZ=Asia/Kolkata

# Retry settings
RETRIES=3
